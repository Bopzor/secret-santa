{
  "compilerOptions": {
    "outDir": "dist",
    "lib": [
      "es2021",
      "DOM"
    ],
    "module": "commonjs",
    "target": "es2021",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts"
  ]
}
